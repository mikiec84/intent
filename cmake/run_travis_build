#! /usr/bin/env python
import os, sys, subprocess, shutil

def x(cmd):
    print(cmd)
    subprocess.check_call(cmd.split(' '))

if __name__ == '__main__':
    if os.path.isdir('build'):
        shutil.rmtree('build')
    os.makedirs('build')
    os.chdir('build')
    x('cmake ..')
    x('make')
    x('make test')
