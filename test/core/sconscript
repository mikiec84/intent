Import('test_env')
Import('core')
Import('gmock')
Import('gtest')
Import('jsoncpp')
Import('zmq')

# Build all .cpp files in this folder into a single binary.
sources = Glob('*.cpp')
sources.extend(test_env.Object('#/src/external/gmock/gtest/src/gtest_main.cc'))

libs = [core, jsoncpp, zmq, gmock, gtest, 'boost_filesystem', 'boost_system', 'pthread']
import platform
if platform.uname()[0] != 'Darwin':
    libs.append('rt')

testrunner = test_env.Program(target='testrunner', source=sources,
    LIBS=libs)

Return('testrunner')
